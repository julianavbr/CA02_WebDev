                <div class="container text-center"><span class="text-muted">The Chocolate Shop&copy; 2020</span></div>
            </footer>

            <tbody>
            <!-- JavaScript -->
            <script src="../../../chocolateShop/js/jquery.min.js"></script>
            <script src="../../../chocolateShop/js/bootstrap.bundle.min.js"></script>
            <script src="../../../chocolateShop/js/table.js"></script>
            <script src="../../../chocolateShop/js/TheChocolateShop.js"></script>
            <script src="../../../chocolateShop/app.js"></script>
            <script>


                // <!-- to sum the items -->
                document.addEventListener("DOMContentLoaded", get_json_data, false); // get_json_data is the function name that will fire on page load
                window.addEventListener("load", function () {
                    document.forms[1].outputTotal.value = sumTotal('menuTable');
                    document.querySelector("#calcTotal").addEventListener("click", function () {
                        document.forms[1].outputTotal.value = sumTotal('menuTable');
                    });
                    <!-- to highlight gluten free options -->
                    document.querySelector("#showGlu").addEventListener("click", function () {
                        isGlutenFree('menuTable', this.checked);
                    });
                });

                function get_json_data(){
                    // Relative URL of external json file
                    var json_url = '/../../chocolateShop/views/example.json';

                    //Build the XMLHttpRequest (aka AJAX Request)
                    xmlhttp = new XMLHttpRequest();
                    xmlhttp.onreadystatechange = function() {
                        if (this.readyState == 4 && this.status == 200) {//when a good response is given do this

                            var data = JSON.parse(this.responseText); // convert the response to a json object
                            append_json(data);// pass the json object to the append_json function
                        }
                    }
                    //set the request destination and type
                    xmlhttp.open("POST", json_url, true);
                    //set required headers for the request
                    xmlhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
                    // send the request
                    xmlhttp.send(); // when the request completes it will execute the code in onreadystatechange section
                }

                //this function appends the json data to the table 'gable'
                function append_json(data){
                    var table = document.getElementById('menuTable');
                    data.forEach(function(object) {
                        var tr = document.createElement('tr');
                        tr.innerHTML = '<td>' + object.desc + '</td>' +
                            '<td>' + object.prc + '</td>';

                            // '<td>' + object.DATE + '</td>';
                        table.appendChild(tr);
                    });
                }
                <!-- if the user types an invalid entry on the price textbox -->
                function errorMsg() {
                    var input = document.getElementById('validationprc').value;
                    if (isNumber(input) == false) {
                        document.getElementById('validationprc').innerHTML("Not a valid option");
                    }
                }

            </script>
</body>

